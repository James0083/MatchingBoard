<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.multi.mapper.EvalCafeMapper">
    <update id="updateStars" parameterType="Shop">
        update shop set
        set stars=stars+#{avgRating}<!-- 기존 별점에 새로 유입된 평균별점 계산하는 코드 필요 -->
        <where>
			sname=#{sname}
        </where>
    </update>
</mapper>